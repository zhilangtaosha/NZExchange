<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.my.setting.ColorModeSetActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="颜色配置" />

    <RelativeLayout
        android:id="@+id/layout_green_up_acms"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_common_lv"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/color_mode"
            android:drawablePadding="10dp"
            android:text="绿涨红跌" />

        <ImageView
            android:id="@+id/iv_green_up_acms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/hook_icon2" />

    </RelativeLayout>

    <include layout="@layout/common_line_margin15" />

    <RelativeLayout
        android:id="@+id/layout_red_up_acms"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_common_lv"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/color_mode"
            android:drawablePadding="10dp"
            android:text="绿涨红跌" />

        <ImageView
            android:id="@+id/iv_red_up_acms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/hook_icon2" />

    </RelativeLayout>

    <include layout="@layout/common_line_margin15" />
</LinearLayout>