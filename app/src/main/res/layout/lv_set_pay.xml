<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="58dp">

    <ImageView
        android:id="@+id/iv_lsp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/card_icon" />

    <TextView
        android:id="@+id/tv_name_lsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_lsp"
        android:text="银行卡"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_status_lsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@mipmap/right_arrow"
        android:drawablePadding="8dp"
        android:text="去设置"
        android:textColor="@color/color_FF6D87A8"
        android:textSize="14sp" />

</RelativeLayout>