<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root_lbsc"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/cb_choice_lbsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableLeft="@drawable/selector_checkbox_choice"
        android:paddingRight="7dp" />

    <TextView
        android:id="@+id/tv_transaction_lbsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cb_choice_lbsc"
        android:text="CET/BCH"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_cost_lbsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0.00008035"
        android:textColor="@color/color_FF7F8592"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_change_lbsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="+3.41%"
        android:textColor="@color/color_FF019D81"
        android:textSize="15sp" />
</RelativeLayout>