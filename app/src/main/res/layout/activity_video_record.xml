<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.my.authentication.VideoRecordActivity">

    <SurfaceView
        android:id="@+id/sv_avr"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/layout_title_avr"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:alpha="0.6"
        android:background="@color/color_FF181F27">

        <TextView
            android:id="@+id/tv_left_title_avr"
            style="@style/tx17_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/left_arrow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="取消" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_avr"
                style="@style/tx17_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tip_avr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title_avr"
        android:layout_margin="15dp"
        android:alpha="0.7"
        android:background="@color/color_FF202833"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            style="@style/tx15_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请正对摄像头，用普通话朗诵一下内容：" />

        <TextView
            android:id="@+id/tv_tip_avr"
            style="@style/tx15_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是xxxxx" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_record_avr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/record_icon" />

    <Button
        android:id="@+id/btn_play_avr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@mipmap/play_icon"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_bottom_avr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_record_again_avr"
            style="@style/tx16_light"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:alpha="0.7"
            android:background="@color/color_FF202833"
            android:text="重新录制" />

        <Button
            android:id="@+id/btn_next_avr"
            style="@style/tx16_light"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:alpha="0.7"
            android:background="@color/color_FF202833"
            android:text="下一步" />
    </RelativeLayout>

</RelativeLayout>