<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_month_rrhc"
        style="@style/tx14_8592"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:text="12-21" />

    <TextView
        android:id="@+id/tv_time_rrhc"
        style="@style/tx14_8592"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_month_rrhc"
        android:layout_alignLeft="@+id/tv_month_rrhc"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="14dp"
        android:text="20:21" />


    <ImageView
        android:id="@+id/iv_detail_rrhc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:src="@mipmap/right_arrow" />

    <LinearLayout
        android:id="@+id/layout_amount_rrhc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_detail_rrhc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_amount_recharge_rrhc"
            style="@style/tx16_87a8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1334.21USDT" />

        <!--<TextView-->
        <!--android:id="@+id/tv_total_amount_rrhc"-->
        <!--style="@style/tx12_8592"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:text="余额 12345.23USDT" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recharge_type_rrhc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:gravity="center_horizontal"
        android:text="USDT充值"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="13sp" />


</RelativeLayout>