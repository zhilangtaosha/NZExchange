<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.otc.tradelist.TradeListActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="交易单" />

    <com.nze.nzexchange.widget.indicator.indicator.ScrollIndicatorView
        android:id="@+id/siv_atl"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:fillViewport="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_FF1F2532" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_atl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>