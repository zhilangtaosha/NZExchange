<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context=".controller.common.ShowImagePayMethodActivity">

    <ImageView
        android:id="@+id/iv_pay"
        android:layout_width="228dp"
        android:layout_height="295dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/iv_close_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_pay"
        android:layout_toRightOf="@+id/iv_pay"
        android:padding="10dp"
        android:src="@mipmap/close_icon4" />

    <ImageView
        android:id="@+id/iv_down_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pay"
        android:layout_alignRight="@+id/iv_pay"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@mipmap/down_icon" />
</RelativeLayout>