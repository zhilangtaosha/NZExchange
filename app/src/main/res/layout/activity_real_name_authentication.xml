<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.my.authentication.RealNameAuthenticationActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="实名认证" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="请上传您的身份证"
                android:textColor="@color/color_FFA3AAB9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_front_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/certificate_front"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="35dp"
                android:text="请上传身份证正面照"
                android:textColor="@color/color_FFA3AAB9"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_front_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="bottom|center_horizontal"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_back_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/certificate_back"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="35dp"
                android:text="请上传身份证反面照"
                android:textColor="@color/color_FFA3AAB9"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_back_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="bottom|center_horizontal"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_hold_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/certificate_hold"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="35dp"
                android:text="请上传手持身份证照"
                android:textColor="@color/color_FFA3AAB9"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_hold_arna"
                android:layout_width="270dp"
                android:layout_height="168dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="bottom|center_horizontal"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <com.nze.nzexchange.widget.CommonButton
                android:id="@+id/btn_submit_arna"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>