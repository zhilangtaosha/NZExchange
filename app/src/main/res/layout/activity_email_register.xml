<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.login.EmailRegisterActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_aer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_backgroud="@color/color_bg"
        app:tb_title_text="邮箱注册" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="邮箱注册"
        android:textColor="@color/color_common"
        android:textSize="24sp" />

    <TextView
        style="@style/tx14_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/exclamatory_mark_red"
        android:drawablePadding="5dp"
        android:text="国家或地区注册后不可更改" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_country_apr"
            style="@style/tx15_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/open_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="中国"
            android:textColor="@color/color_FFA3AAB9" />

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_email_aer"
            style="@style/et14"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:hint="邮箱号码" />
    </LinearLayout>

    <View
        android:id="@+id/line1_aer"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_account_al"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_verify_aer"
            style="@style/et14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="请输入邮箱验证码" />

        <com.nze.nzexchange.widget.VerifyButton
            android:id="@+id/tv_verify_aer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="获取验证码"
            android:textColor="@color/color_FFE05760"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/line2_aer"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_account_al"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_pwd_aer"
            style="@style/et14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="密码(8-16位数字和字母组合)" />

        <CheckBox
            android:id="@+id/cb_pwd_aer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableRight="@drawable/selector_checkbox_pwd"
            android:paddingLeft="50dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <View
        android:id="@+id/line3_aer"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_account_al"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree_aer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/selector_checkbox_agreement"
            android:drawablePadding="5dp"
            android:text="请阅读并同意"
            android:textColor="@color/color_FF7F8592"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_agree_aer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="《用户协议》"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="13sp" />
    </LinearLayout>

    <com.nze.nzexchange.widget.CommonButton
        android:id="@+id/btn_register_aer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="注册" />


    <TextView
        android:id="@+id/tv_go_phone_aer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:text="手机注册"
        android:textColor="@color/color_FF6D87A8"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_to_login_aer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="已有账号？"
            android:textColor="@color/color_FF7F8592"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>