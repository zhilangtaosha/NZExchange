<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.login.FindPwdActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_afp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_backgroud="@color/color_bg"
        app:tb_right_text="取消"
        app:tb_title_text="找回登录密码" />

    <com.nze.nzexchange.widget.clearedit.ClearableEditText
        android:id="@+id/et_account_afp"
        style="@style/et14"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/ctb_al"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:hint="手机号/邮箱号" />

    <include layout="@layout/common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_verify_afp"
            style="@style/et14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="请输入验证码" />

        <com.nze.nzexchange.widget.VerifyButton
            android:id="@+id/tv_verify_afp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="获取验证码"
            android:textColor="@color/color_FFE05760"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_line" />

    <com.nze.nzexchange.widget.clearedit.ClearableEditText
        android:id="@+id/et_pwd_afp"
        style="@style/et14"
        android:layout_height="44dp"
        android:layout_below="@+id/ctb_al"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:hint="重置密码(8-16位数字和字母结合)"
        android:inputType="textPassword" />

    <include layout="@layout/common_line" />

    <com.nze.nzexchange.widget.clearedit.ClearableEditText
        android:id="@+id/et_pwd_again_afp"
        style="@style/et14"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:hint="确认密码"
        android:inputType="textPassword" />

    <include layout="@layout/common_line" />

    <com.nze.nzexchange.widget.CommonButton
        android:id="@+id/btn_confirm_afp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:text="确认" />
</LinearLayout>