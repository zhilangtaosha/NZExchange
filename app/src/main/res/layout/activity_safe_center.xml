<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.my.safecenter.SafeCenterActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="安全中心" />

    <com.nze.nzexchange.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:id="@+id/layout_phone_bind_set"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机绑定"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_bind_phone_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已绑定"
                    android:textColor="@color/color_FF676C7A"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邮箱绑定"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_bind_email_asc"
                    style="@style/tx15_87a8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="未绑定" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="谷歌绑定"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_bind_google_asc"
                    style="@style/tx15_87a8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="未绑定" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手势密码"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <Switch
                    android:id="@+id/switch_gesture_password_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="指纹解锁"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <Switch
                    android:id="@+id/switch_fingerprint_password_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="资金密码"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_fund_password_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="50dp"
                    android:src="@mipmap/right_arrow" />
            </RelativeLayout>

            <include layout="@layout/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="资金密码"
                    android:textColor="@color/color_FFA3AAB9"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_modify_password_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="50dp"
                    android:src="@mipmap/right_arrow" />
            </RelativeLayout>

            <include layout="@layout/common_line" />
        </LinearLayout>
    </com.nze.nzexchange.widget.ReboundScrollView>

</LinearLayout>