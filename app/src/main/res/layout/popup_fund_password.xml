<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_tran">

    <LinearLayout
        android:id="@+id/layout_root_pfp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_FF12161C"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                style="@style/tx15_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="安全验证" />

            <TextView
                android:id="@+id/tv_cancel_pfp"
                style="@style/tx14_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="取消" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TextView
            style="@style/tx14_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="资金密码" />

        <EditText
            android:id="@+id/et_password_pfp"
            style="@style/et15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入资金密码（6位数字）"
            android:paddingLeft="0dp"
            android:maxLength="6"
            android:inputType="numberPassword"/>

        <com.nze.nzexchange.widget.CommonButton
            android:id="@+id/btn_confirm_pfp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="确定" />
    </LinearLayout>

</RelativeLayout>