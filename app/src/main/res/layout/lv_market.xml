<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/tv_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="PHX/BTC"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_transaction"
        android:layout_marginLeft="140dp"
        android:text="823.93186"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_total24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_transaction"
        android:layout_alignLeft="@+id/tv_transaction"
        android:layout_marginTop="4dp"
        android:text="24h量 21332"
        android:textColor="@color/color_FF7F8592"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_exchange"
        android:layout_alignBottom="@+id/tv_total24"
        android:text="¥3813.31"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_radius_9d81_bg"
        android:gravity="center"
        android:text="+18.56%"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>