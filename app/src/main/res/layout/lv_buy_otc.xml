<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="23dp"
    android:paddingRight="15dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_name_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小韭菜"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_limt_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_lbo"
        android:layout_marginTop="10dp"
        android:text="限额：832.32-2133.13CNY"
        android:textColor="@color/color_FF7F8592"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_total_num_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_limt_lbo"
        android:layout_marginTop="9dp"
        android:text="数量：2124.00"
        android:textColor="@color/color_FF7F8592"
        android:textSize="14sp" />

    <com.nze.nzexchange.widget.LinearLayoutAsListView
        android:id="@+id/lav_pay_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_order_num_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:text="474单"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_price_lbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_num_lbo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:text="¥1.0000"
        android:textColor="@color/color_FF069F83"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_buy_lbo"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_below="@+id/tv_price_lbo"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_radius_9d81_bg"
        android:text="买入"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>