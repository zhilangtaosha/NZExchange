<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".controller.my.asset.ConcreteCurrencyAssetActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_acca"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="资产" />

    <TextView
        android:id="@+id/tv_currency_name_acca"
        style="@style/tx15_aab9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctb_acca"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:text="USDT" />

    <TextView
        android:id="@+id/tv_available_key_acca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_currency_name_acca"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="可用"
        android:textColor="@color/color_FF7F8592"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_available_value_acca"
        style="@style/tx15_aab9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_available_key_acca"
        android:layout_alignLeft="@+id/tv_available_key_acca"
        android:layout_marginTop="10dp"
        android:text="0.1515" />

    <TextView
        android:id="@+id/tv_freeze_key_acca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_currency_name_acca"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="冻结"
        android:textColor="@color/color_FF7F8592"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_freeze_value_acca"
        style="@style/tx15_aab9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_freeze_key_acca"
        android:layout_alignLeft="@+id/tv_freeze_key_acca"
        android:layout_marginTop="10dp"
        android:text="0.1515" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_currency_name_acca"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_money_key_acca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折合(CNY)"
            android:textColor="@color/color_FF7F8592"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_money_value_acca"
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2.5449865" />
    </LinearLayout>

    <View
        android:id="@+id/line_acca"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_available_value_acca"
        android:layout_marginTop="15dp"
        android:background="@color/color_FF1F2532" />

    <TextView
        android:id="@+id/tv_record_title_acca"
        style="@style/tx15_aab9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_acca"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:text="财务记录" />

    <RelativeLayout
        android:id="@+id/layout_btn_acca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_recharge_acca"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:background="@drawable/asset_btn_bg"
            android:drawableLeft="@mipmap/asset_recharge"
            android:drawablePadding="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="充币"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_withdraw_acca"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/asset_btn_bg"
            android:drawableLeft="@mipmap/asset_recharge"
            android:drawablePadding="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="提币"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_acca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btn_acca"
        android:layout_below="@+id/tv_record_title_acca"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:divider="@color/color_line"
        android:dividerHeight="1px" />

</RelativeLayout>