<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.my.paymethod.AddZhifubaoActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_aaz"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="添加支付宝" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_name_aaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_name_value_aaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_name_aaz"
            android:text="杨林军"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_account_aaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_cardno_value_aaz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_account_aaz"
            android:background="@android:color/transparent"
            android:hint="请输入支付宝账号"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/color_FFA3AAB9"
            android:textColorHint="@color/color_FF7F8592"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <RelativeLayout
        android:id="@+id/layout_add_aaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_add_aaz"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/add_image" />

        <TextView
            android:id="@+id/tv_add_aaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_add_aaz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="上传收款二维码"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_close_aaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_add_aaz"
            android:layout_marginRight="-10dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:src="@mipmap/close_icon" />
    </RelativeLayout>

    <com.nze.nzexchange.widget.CommonButton
        android:id="@+id/btn_save_aaz"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="15dp"
        android:text="保存支付方式" />
</LinearLayout>