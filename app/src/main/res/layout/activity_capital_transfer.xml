<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.transfer.CapitalTransferActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_act"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_right_text="转账记录"
        app:tb_title_text="UCC转入" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_out_account_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableRight="@mipmap/right_arrow"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="选择转出账户"
            android:textColor="@color/color_FF7F8592"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账至"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_in_account_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:drawableRight="@mipmap/right_arrow"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="OTC账户"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账数量"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_num_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:hint="输入转账数量"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColor="@color/color_FFA3AAB9"
            android:textColorHint="@color/color_FF7F8592"
            android:background="@android:color/transparent"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_max_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最多可转12.35"
            android:textColor="@color/color_FF7F8592"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_all_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="全部转账"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="12sp" />
    </LinearLayout>

    <com.nze.nzexchange.widget.CommonButton
        android:id="@+id/btn_act"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="转账" />
</LinearLayout>