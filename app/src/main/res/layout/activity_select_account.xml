<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.transfer.SelectAccountActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:id="@+id/ctb_asa"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="选择转出账户" />

    <LinearLayout
        android:id="@+id/layout_bibi_asa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_lv"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="币币账户"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bibi_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="可用UCC"
            android:textColor="@color/color_FF7F8592"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_bibi_value_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/layout_withdraw_asa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_lv"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值提现账户"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_withdraw_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="可用UCC"
            android:textColor="@color/color_FF7F8592"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_withdraw_value_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/layout_otc_asa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_lv"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTC账户"
            android:textColor="@color/color_FFA3AAB9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_otc_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:paddingLeft="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="可用UCC"
            android:textColor="@color/color_FF7F8592"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_otc_value_asa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12"
            android:textColor="@color/color_FF6D87A8"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />
</LinearLayout>