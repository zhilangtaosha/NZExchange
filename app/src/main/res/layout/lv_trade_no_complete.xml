<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="26dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_type_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买入UCC"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_type_ltnc"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_type_ltnc"
        android:text="10/23 16:12"
        android:textColor="@color/color_FF7F8592"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_status_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_type_ltnc"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:text="待放币"
        android:textColor="@color/color_FF6D87A8"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_price_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_ltnc"
        android:layout_marginTop="15dp"
        android:text="1.3245"
        android:textColor="@color/color_FFA3AAB9"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_countdown_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(59分23秒)"
        android:textColor="@color/color_FF6D87A8"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_price_ltnc"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_num_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price_ltnc"
        android:layout_marginTop="12dp"
        android:text="数量: 2335242"
        android:textColor="@color/color_FF7F8592"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_money_ltnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_num_ltnc"
        android:layout_alignParentRight="true"
        android:text="总额: 3635.42"
        android:textColor="@color/color_FF7F8592"
        android:textSize="12sp" />
</RelativeLayout>