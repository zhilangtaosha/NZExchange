<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".controller.my.safecenter.ModifyPasswordActivity">

    <com.nze.nzexchange.widget.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tb_title_text="修改登录密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="原登录密码" />

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_old_password_amp"
            style="@style/et14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="旧密码" />
    </LinearLayout>

    <include layout="@layout/common_line_margin15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置新密码" />

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_new_password_amp"
            style="@style/et14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="8-12位数字和字母结合" />
    </LinearLayout>

    <include layout="@layout/common_line_margin15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            style="@style/tx15_aab9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置新密码" />

        <com.nze.nzexchange.widget.clearedit.ClearableEditText
            android:id="@+id/et_new_password_confirm_amp"
            style="@style/et14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="8-12位数字和字母结合" />
    </LinearLayout>

    <include layout="@layout/common_line_margin15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="修改登录密码后，需重新登录账户"
        android:textColor="@color/color_FF454D5B"
        android:textSize="12sp" />

    <com.nze.nzexchange.widget.CommonButton
        android:id="@+id/btn_confirm_amp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="确定" />
</LinearLayout>